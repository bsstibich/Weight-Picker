<FloatLayout>:
	btn: btn
	bar: bar
	weight: weight
	output: output
	cols: 1

	Label:
		text: "Bar Weight"
		size_hint: 0.4, 0.08
		pos_hint: {"x":0.1, "top": 0.95}
		font_size: (root.width**2 + root.height**2) / 14**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'

	TextInput:
		id: bar
		pos_hint: {"x":0.5, "top": 0.95}
		size_hint: 0.45, 0.07
		font_size: (root.width**2 + root.height**2) / 12**4
		multiline: False

	Label:
		text: "Working Weight"
		size_hint: 0.4, 0.1
		pos_hint: {"x":0.1, "top": 0.85}
		font_size: (root.width**2 + root.height**2) / 14**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'

	TextInput:
		id: weight
		pos_hint: {"x":0.5, "top": 0.85}
		size_hint: 0.45, 0.07
		font_size: (root.width**2 + root.height**2) / 12**4
		multiline: False


	Label:
		id: output
		text: "Welcome To The Weight Picker"
		size_hint: 0.5, 0.55
		pos_hint: {"x":0.25, "top": 0.75}
		font_size: (root.width**2 + root.height**2) / 13**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'



	Button:
		id: btn
		size_hint: 0.5, 0.12
		pos_hint: {"x":0.25, "top":0.2}
		text: "Calculate Weights"
		on_release:
			text = root.DoTheThing()