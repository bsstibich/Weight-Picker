<FloatLayout>:
	btn: btn
	weight: weight
	output: output
	four: four
	two: two
	cols: 1

	Label:
		text: "Bar Weight"
		size_hint: 0.4, 0.08
		pos_hint: {"x":0.1, "top": 0.95}
		font_size: (root.width**2 + root.height**2) / 14**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'

	Label:
		text: "25 lbs"
		size_hint: 0.2, 0.05
		pos_hint: {"x":0.57, "top": 0.95}
		font_size: (root.width**2 + root.height**2) / 15**4
		text_size: self.size

	Label:
		text: "45 lbs"
		size_hint: 0.2, 0.05
		pos_hint: {"x":0.8, "top": 0.95}
		font_size: (root.width**2 + root.height**2) / 15**4
		text_size: self.size
		
	CheckBox: 
		on_active: root.barManage()
		id: four
		group: 'bar'
		size_hint_x: .1
		size_hint_y: .1
		pos_hint: {"x":0.7, "top": 0.96}
		active: root.checkBoxCheck(45)

	CheckBox:
		on_active: root.barManage()
		id: two
		group: 'bar'
		size_hint_x: .1
		size_hint_y: .1
		pos_hint: {"x":0.47, "top": 0.96}
		active: root.checkBoxCheck(25)

	Label:
		text: "Working Weight"
		size_hint: 0.4, 0.1
		pos_hint: {"x":0.1, "top": 0.85}
		font_size: (root.width**2 + root.height**2) / 14**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'

	TextInput:
		id: weight
		pos_hint: {"x":0.5, "top": 0.85}
		size_hint: 0.45, 0.07
		font_size: (root.width**2 + root.height**2) / 12**4
		multiline: False


	Label:
		id: output
		text: "Welcome To The Weight Picker"
		size_hint: 0.5, 0.55
		pos_hint: {"x":0.25, "top": 0.75}
		font_size: (root.width**2 + root.height**2) / 13**4
		text_size: self.size
		halign: 'left'
		valign: 'middle'



	Button:
		id: btn
		size_hint: 0.5, 0.12
		pos_hint: {"x":0.25, "top":0.2}
		text: "Calculate Weights"
		on_release:
			text = root.DoTheThing()